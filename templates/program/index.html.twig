{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="container">
        <section>
            <div class="mt-5 text-center">
                <h1>Toutes vos séries disponibles </h1>
             </div>
        </section>
    <section id="new" class="p-5">
        <div class="row mt-2">
    {% for program in programs %}
                <div class="card-deck col-lg-4">
            <div class="card col m-7" style="200em">
                <img src="{{program.poster}}" height="250px" class="card-img-top" alt="{{ program.title }}">
                <div class="card-body">
                <div class="text-center">
                      <h5 class="card-title">{{ program.title }}</h5>
                        <p class="card-text">{{ program.summary }}</p> 
                </div>
                  <a href="{{ path("program_show", { slug: program.slug }) }}" class="btn btn-primary">Voir la fiche</a>
                </div>
              </div>
            </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
        </div>
    </section>
    </div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
     <a href="{{ path('program_new') }}"><h3>Ajouter une serie</h3></a>
{% endblock %}











